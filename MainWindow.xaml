<Window x:Class="MT940Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MT940Parser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
		  <Grid.RowDefinitions>
			<RowDefinition Height="8*" />
			<RowDefinition Height="2*" />
		  </Grid.RowDefinitions>
        <Border Grid.Row ="0" Grid.Column="0"  BorderThickness="2" CornerRadius="10" Background="Green">
            <StackPanel Orientation="Vertical" Name="ImagePanel" Drop="ImagePanel_Drop" AllowDrop="true" >
                <Label FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Center">Please drop .sta file here, to generate CSV file with same name...</Label>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label Name="Info"></Label>        
        </StackPanel>
    </Grid>
</Window>
