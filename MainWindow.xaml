<Window x:Class="MT940Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MT940Parser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
		  <Grid.RowDefinitions>
			<RowDefinition Height="8*" />
			<RowDefinition Height="2*" />
		  </Grid.RowDefinitions>
        <StackPanel Grid.Row ="0" Orientation="Vertical" Grid.Column="0" Name="ImagePanel" Drop="ImagePanel_Drop" AllowDrop="true" Background="DarkGray">
            <Label FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Center">Drop file here </Label>
        </StackPanel>
        <StackPanel>
            <Label Name="Info"></Label>        
        </StackPanel>
    </Grid>
</Window>
